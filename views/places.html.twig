<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href='styles.css' rel='stylesheet' type='text/css' media='all'>
    <title>Places You've Been</title>
</head>
<body>
    <div class='container'>
      <h1>Places You Have Visited</h1>

      {% if places is not empty %}
          <p>Here are the places you've visited:</p>
          <ul>
              {% for place in places %}
                  <li>{{ place.getCityName }}</li>
                  <ul>
                    <li><img src= "{{ place.getImage }}"></li>
                    <li>When: {{ place.getDate }}</li>
                    <li>How long: {{ place.getDuration }}</li>
                    <li>Reason: {{ place.getReason }}</li>
                  </ul>
              {% endfor %}
          </ul>
      {% endif %}

      <form action='/places' method='post'>
          <div class='form-group'>
              <label for='city_name'>City you've visited:</label>
              <input id='city_name' name='city_name' class='form-control' type='text'>
          </div>

          <div class='form-group'>
              <label for='date'>Date you visited:</label>
              <input id='date' name='date' class='form-control' type='text'>
          </div>

          <div class='form-group'>
              <label for='duration'>Length you visited:</label>
              <input id='duration' name='duration' class='form-control' type='text'>
          </div>

          <div class='form-group'>
              <label for='reason'>Why you visited:</label>
              <input id='reason' name='reason' class='form-control' type='text'>
          </div>

          <div class='form-group'>
              <label for='image'>Include a URL for picture:</label>
              <input id='image' name='image' class='form-control' type='text'>
          </div>

          <button type='submit' class='btn-info'>Add Place</button>
      </form>

      <form action='/delete_places' method='post'>
          <button type='submit' class='btn-danger'>Clear All</button>
      </form>
    </div>
</body>
</html>
