<html>
<head>
    <title>Places You've Been</title>
</head>
<body>
    <h1>Places I've Visited</h1>

    {% if places is not empty %}
        <p>Here are the places you've visited:</p>
        <ul>
            {% for place in places %}
                <li>{{ place.GetCityName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/places' method='post'>
        <label for='city_name'>City you've visited:</label>
        <input id='city_name' name='city_name' type='text'>

        <button type='submit'>Add Place</button>
    </form>

    <form action='/delete_place' method='post'>
        <button type='submit'>delete</button>
    </form>
</body>
</html>
